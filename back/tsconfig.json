{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "src/@types"],
    "strict": true,
    "target": "ES2020",                    // Versão de JavaScript que será gerada
    "module": "commonjs",                  // Módulos compatíveis com Node.js
    "outDir": "./dist",                    // Diretório de saída para arquivos compilados
    "rootDir": "./src",                    // Diretório onde estão os arquivos TypeScript
    "esModuleInterop": true,               // Habilita a interoperabilidade entre módulos ES e CommonJS
    "skipLibCheck": true,                  // Ignora checagens de tipos em arquivos de definição
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "src/@types/**/*.d.ts"
  ],              // Inclui todos os arquivos TypeScript da pasta src
  "exclude": ["node_modules"]              // Exclui a pasta node_modules
}
